<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA"
    android:gravity="center_horizontal">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Confirmation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginBottom="24dp" />

    <!-- Konfirmasi Nama Makanan -->
    <TextView
        android:id="@+id/tvFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Konfirmasi Jumlah Porsi -->
    <TextView
        android:id="@+id/tvServings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Konfirmasi Nama Pemesan -->
    <TextView
        android:id="@+id/tvOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Konfirmasi Catatan Tambahan -->
    <TextView
        android:id="@+id/tvNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- Pesan Terima Kasih -->
    <TextView
        android:id="@+id/tvThankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for your order! Please wait for delivery."
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FF9800"
        android:layout_marginBottom="24dp" />

    <!-- Tombol Kembali ke Menu -->
    <Button
        android:id="@+id/backToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Back to Menu"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>